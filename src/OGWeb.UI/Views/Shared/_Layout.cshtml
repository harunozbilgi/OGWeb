<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    @await RenderSectionAsync("Seo", required: false)

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style.min.css" asp-append-version="true" >


</head>
<body>
    <header>
        <nav>
            <div class="navbar-main">
                <div class="container">
                    <div class="navbar-main-general d-flex align-items-center justify-content-between">
                        <a asp-controller="Home" asp-action="Index" class="navbar-logo">
                            <img class="svg" src="/assets/img/icons/logo.svg" alt="navbar-logo">
                        </a>
                        <div class="menu-navbar">
                            <input class="checkbox nav-icons-check" type="checkbox" name="navicons" id="navicons" />
                            <div class="hamburger-lines">
                                <span class="line line1"></span>
                                <span class="line line2"></span>
                                <span class="line line3"></span>
                            </div>
                            <div class="toggle">
                                <ul class="menu-list d-flex flex-column flex-lg-row justify-content-center align-items-center">
                                    <li class="menu-item">
                                        <a asp-controller="Home" asp-action="Index" class="menu-links">HOME</a>
                                    </li>
                                    <li class="menu-item">
                                        <a asp-controller="Home" asp-action="Work" class="menu-links">WORKS</a>
                                    </li>
                                    <li class="menu-item">
                                        <a asp-controller="Home" asp-action="OverView" class="menu-links">OVERVIEW</a>
                                    </li>
                                    <li class="menu-item">
                                        <a asp-controller="Home" asp-action="Video" class="menu-links">VIDEOS</a>
                                    </li>
                                    <li class="menu-item">
                                        <a asp-controller="Home" asp-action="Contact" class="menu-links">CONTACT</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="overlay-body"></div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" >
        @RenderBody()
    </main>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Plugins", required: false)
    <script src="~/assets/js/style.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
