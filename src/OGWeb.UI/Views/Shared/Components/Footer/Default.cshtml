@using OGWeb.Core.Dtos
@model AppSettingDto

@{
    string pClass = ViewBag.page == "Home" ? "bg-transparent pb-3" : "";
}

<div class="section-footer @pClass">
    <div class="container">
        <div class="section-footers-main d-flex flex-column flex-md-row align-items-center justify-content-between">
            <p class="mb-3 mb-md-0">© Copyright @DateTime.Now.Year. All Rights Reserved.</p>
            <div class="d-flex align-items-center">
                @if (Model is not null)
                {
                    <a href="@Model.FaceBook" target="_blank" class="btn btn-social me-2">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="@Model.Instagram" target="_blank" class="btn btn-social">
                        <i class="bi bi-instagram"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</div>